{
    "manifest_version": 3,
    "name": "Tab Summarizer",
    "version": "1.0.0",
    "description": "Summarize the content of the current tab with AI.",
    "icons":{
        "1": "images/icon.png"
    },
    "permissions": ["activeTab", "scripting"],
    "host_permissions": ["http://*/*","https://*/*"], 
    "background": {
        "service_worker": "service-worker.js",
        "type": "module"
    },
    "action": {
        "default_popup": "popup.html"
    }
  }
  